{
    "max_val_len":     512,

    "refobjs": ["anystyle_references_from_cermine_fulltext",
                "anystyle_references_from_cermine_refstrings",
                "anystyle_references_from_grobid_fulltext",
                "anystyle_references_from_grobid_refstrings",
                "anystyle_references_from_pdftotext_fulltext",
                "cermine_references_from_cermine_xml",
                "cermine_references_from_grobid_refstrings",
                "grobid_references_from_grobid_xml",
                "exparser_references_from_cermine_layout",
                "matched_references_from_sowiport",
                "matched_references_from_crossref",
                "matched_references_from_dnb",
                "matched_references_from_openalex",
                "matched_references_from_ssoar",
                "matched_references_from_arxiv",
                "matched_references_from_econbiz",
                "matched_references_from_gesis_bib",
                "matched_references_from_research_data" ],

    "chunk_size_blocks":        250,
    "chunk_size_refindex":      250,
    "chunk_size_clusters":      250,
    "chunk_size_duplicates":    250,
    "chunk_size_references":    250,
    
    "max_scroll_tries":            2,
    "max_scroll_tries_blocks":     2,
    "max_scroll_tries_refindex":   2,
    "max_scroll_tries_clusters":   2,
    "max_scroll_tries_duplicates": 2,
    "max_scroll_tries_references": 2,
    
    "scroll_size":            500,
    "scroll_size_blocks":     500,
    "scroll_size_refindex":   500,
    "scroll_size_clusters":   500,
    "scroll_size_duplicates": 500,
    "scroll_size_references": 500,

    "request_timeout_blocks":     60,
    "request_timeout_refindex":   60,
    "request_timeout_clusters":   60,
    "request_timeout_duplicates": 60,
    "request_timeout_references": 60,
    
    "max_extract_time":            1,
    "max_extract_time_blocks":     1,
    "max_extract_time_refindex":   0.5,
    "max_extract_time_clusters":   1,
    "max_extract_time_duplicates": 1,
    "max_extract_time_references": 1,

    "recheck_blocks":     true,
    "recheck_refindex":   true,
    "recheck_clusters":   true,
    "recheck_duplicates": true,
    "recheck_references": true,

    "original_values": true,

    "ids": null,
    
    "ngrams_n":   3,
    "dateweight": 250,

    "threshold":      0.25,
    "max_title_diff": 0.5,
    "thr_prec":       0.85,

    "min_title_sim":  0.75,
    "min_author_sim": 0.5,

    "feat_edit":      4,
    "feat_ratio":     0.2,
    "feat_terms":     "words",
    "feat_auths":     "parts",
    "feat_auth_sep":  true,
    "feat_n_auths":   5,
    "feat_n_terms":   5,
    "feat_langs":     ["english","german","french","italian","spanish","russian","portuguese","dutch","swedish","danish","finnish"],
    "feat_token":     "\\w+",
    "feat_surpres":   ["de","del","di","de la","von","van","della"],
    "feat_noname":    "(.*anonym\\w*)|(.*unknown\\w*)|(\\s*-\\s*)",
    "feat_word":      "(\b[^\\s]+\b)",
    "feat_strip":     "(^(\\s|,)+)|((\\s|,)+$)",
    "feat_punct":     "[!\"#$%&\\'()*+\\/:;<=>?@[\\\\\\]^_`{|}~1-9]",
    "feat_subtitdiv": "\\. |: | -+ |\\? ",

    "regex_garbage": "\\W",
    "regex_namesep": "\\W",
    "regex_year":    "1[5-9][0-9]{2}|20(0[0-9]|1[0-9]|2[0-3])",
    "regex_seps":    "[^A-Za-zßäöü]",
    "regex_word":    "[A-Za-zßäöü]{2,}",

    "targets": ["ssoar","research_data","econbiz","dnb","gesis_bib","sowiport","crossref","arxiv","openalex"],
    "gesis":   ["ssoar","research_data"],
    
    "dbscan": false,
    
    "featype": "ngrams",
    
    "similarities": ["jaccard"],
    "thresholds":   [[0.8]],
    
    "XF_type": "PROB",
    "FF_type": "PROB_thr",
    "FX_type": "PROB",
    
    "fields": ["reference","volume","issue","year","start","end","title","source","place","type","authors","editors","publishers"]
}
